        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".About_Page"></activity>
        <activity android:name=".Help_Page"></activity>
        <activity
            android:name=".Popup_tooltip_ip"
            android:theme="@style/AppTheme.PopupTheme" />
        <activity
            android:name=".Popup_tooltip_mac"
            android:theme="@style/AppTheme.PopupTheme" />
        <activity
            android:name=".Popup_device_info"
            android:theme="@style/AppTheme.PopupTheme" />
